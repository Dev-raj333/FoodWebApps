@using Microsoft.AspNetCore.Identity;
@inject SignInManager<ApplicationUser> signInManager;
@inject UserManager<ApplicationUser> userManager;
<ul class="navbar-nav">
    @if (signInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <a class="nav-link text-black">Hello @userManager.GetUserName(User)</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-black" asp-action="Logout" title="Logout" asp-controller="Auth">Logout<i class="fa fa-sign-out"></i></a>
        </li>
    }
</ul>
