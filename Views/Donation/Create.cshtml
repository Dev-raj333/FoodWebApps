@model DonationCreateVM

@{
    ViewData["Title"] = "Create New Donation";
}

<h2>Request for Donation</h2>

<form asp-action="Create">
    <!-- Hidden field for DonorID -->
    <input asp-for="DonorID" type="hidden" />

    <div class="form-group">
        <label asp-for="FoodType" class="control-label"></label>
        <select asp-for="FoodType" class="form-control" asp-items="Html.GetEnumSelectList<FoodDonationWebApp.Models.FoodType>()"></select>
        <span asp-validation-for="FoodType" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Quantity" class="control-label"></label>
        <input asp-for="Quantity" class="form-control" />
        <span asp-validation-for="Quantity" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ExpiraryDate" class="control-label"></label>
        <input asp-for="ExpiraryDate" class="form-control" />
        <span asp-validation-for="ExpiraryDate" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description" class="control-label"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Status" class="control-label"></label>
        <select asp-for="Status" class="form-control" asp-items="Html.GetEnumSelectList<FoodDonationWebApp.Models.DonationStatus>()"></select>
        <span asp-validation-for="Status" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
</form>

<div class="mt-4">
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
