@model FoodDonationWebApp.Models.Donation

@{
    ViewData["Title"] = "Donation Details";
}

<h2>Donation Details</h2>

<div>
    <h4>Donation</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Donor Name</dt>
        <dd class="col-sm-10">@Model.Donor?.FirstName @Model.Donor?.FirstName</dd>

        <dt class="col-sm-2">Address</dt>
        <dd class="col-sm-10">@Model.Donor?.Address</dd>

        <dt class="col-sm-2">Food Type</dt>
        <dd class="col-sm-10">@Model.FoodType</dd>

        <dt class="col-sm-2">Quality</dt>
        <dd class="col-sm-10">@Model.Quantity</dd>

        <dt class="col-sm-2">Expiration Date</dt>
        <dd class="col-sm-10">@Model.ExpiraryDate?.ToString("d")</dd>

        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@Model.Description</dd>

        <dt class="col-sm-2">Status</dt>
        <dd class="col-sm-10">@Model.Status</dd>
    </dl>
</div>

<div>
    <a asp-action="Index" class="btn btn-primary">Back to List</a>
</div>
