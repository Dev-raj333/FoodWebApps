@model FoodDonationWebApp.Models.Donation

@{
    ViewData["Title"] = "Edit Donation";
}

<h2>Edit Donation</h2>

<form asp-action="Edit">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="DonorID" class="control-label"></label>
        <input asp-for="DonorID" class="form-control" readonly /> <!-- Readonly, since DonorID should not change -->
    </div>

    <div class="form-group">
        <label asp-for="FoodType" class="control-label"></label>
        <select asp-for="FoodType" class="form-control" asp-items="Html.GetEnumSelectList<FoodDonationWebApp.Models.FoodType>()"></select>
    </div>

    <div class="form-group">
        <label asp-for="Quantity" class="control-label"></label>
        <input asp-for="Quantity" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="ExpiraryDate" class="control-label"></label>
        <input asp-for="ExpiraryDate" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Description" class="control-label"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
    </div>

    <div class="form-group">
        <label asp-for="Status" class="control-label"></label>
        <select asp-for="Status" class="form-control" asp-items="Html.GetEnumSelectList<FoodDonationWebApp.Models.DonationStatus>()"></select>
    </div>

    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
    </div>
</form>

<a asp-action="Index" class="btn btn-secondary">Back to List</a>
