@model FoodDonationWebApp.Models.Donation

@{
    ViewData["Title"] = "Delete Donation";
}

<h2>Delete Donation</h2>

<h3>Are you sure you want to delete this donation?</h3>

<div>
    <h4>Donation</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Donor Name
        </dt>
        <dd class="col-sm-10">
            @Model.Donor?.FirstName @Model.Donor?.LastName
        </dd>

        <dt class="col-sm-2">
            Food Type
        </dt>
        <dd class="col-sm-10">
            @Model.FoodType
        </dd>

        <dt class="col-sm-2">
            Quality
        </dt>
        <dd class="col-sm-10">
            @Model.Quantity
        </dd>

        <dt class="col-sm-2">
            Expiration Date
        </dt>
        <dd class="col-sm-10">
            @Model.ExpiraryDate?.ToString("d")
        </dd>

        <dt class="col-sm-2">
            Status
        </dt>
        <dd class="col-sm-10">
            @Model.Status
        </dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>
